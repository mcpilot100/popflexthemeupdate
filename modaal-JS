  };		
  fetch(window.Shopify.routes.root + 'cart/add.js', {		
    method: 'POST',		
    headers: {		
      'Content-Type': 'application/json'		
    },		
    body: JSON.stringify(formData)		
  })		
  .then(response => {		
    return response.json();		
  }).then(data =>{		
    console.log(data);		
